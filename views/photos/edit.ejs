<% include ../partials/header %>
<div class="container">
    <div clas="row">
        <h1 id="edit">Edit <%=photo.name %></h1>
        <div class="form-signin">
            <form action="/photos/<%=photo._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Photo Memory Name</label>
                    <input id="name" class="form-control" type="text" name = "photo[name]" value="<%=photo.name %>">
                </div>

                <div class="form-group">
                    <label for="image">Image</label>
                    <input id="image" class="form-control" type="file" name = "photo[image]" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="description">Photo Description</label>
                    <input id="description" class="form-control" type="text" name = "photo[description]" value="<%=photo.description %>">
                </div>
                
                <div class="form-group">
                    <button onclick="return confirm('You are going to make changes to this photo memory.');" class="btn-primary btn-lg btn-default btn-block" >Submit!</button>
                </div>
            </form>
                 <a href="/photos/<%=photo._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>